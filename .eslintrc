{
  "root": true,

  "plugins": ["prettier"],

  "extends": ["eslint:recommended", "prettier"],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "browser": true
  },

  "ignorePatterns": ["dist/**/*.js", "_site/**/*.js"],

  "globals": {
    "matchMedia": true
  },

  "rules": {
    "prettier/prettier": "error"
  }
}
